@model WebApplication1.Models.user
@{
    ViewBag.Title = "Xóa người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2>Xóa người dùng</h2>

    <div class="alert alert-warning" role="alert">
        <strong>Cảnh báo!</strong> Bạn có chắc chắn muốn xóa người dùng này?
    </div>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Thông tin người dùng</h5>
            <p><strong>ID:</strong> @Model.id</p>
            <p><strong>Tên đăng nhập:</strong> @Model.username</p>
            <p><strong>Vai trò:</strong> @Model.Role</p>
        </div>
    </div>

    @using (Html.BeginForm("DeleteUser", "Admin", new { area = "Admin" }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.id" />

        <div class="mt-3">
            <button type="submit" class="btn btn-danger">Xác nhận xóa</button>
            <a href="@Url.Action("Users", "Admin", new { area = "Admin" })" class="btn btn-secondary">Hủy</a>
        </div>
    }
</div>

