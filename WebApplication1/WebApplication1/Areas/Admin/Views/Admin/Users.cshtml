@model IEnumerable<WebApplication1.Models.user>
@{
    ViewBag.Title = "Quản lý người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2>Quản lý người dùng</h2>
    
    <div class="mb-3">
        <a href="@Url.Action("CreateUser", "Admin", new { area = "Admin" })" class="btn btn-success">Thêm người dùng mới</a>
        <a href="@Url.Action("Index", "Admin", new { area = "Admin" })" class="btn btn-secondary">Về trang chủ</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Tên đăng nhập</th>
                <th>Vai trò</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.id</td>
                    <td>@item.username</td>
                    <td>
                        @if (item.Role == "Admin")
                        {
                            <span class="badge bg-danger">@item.Role</span>
                        }
                        else
                        {
                            <span class="badge bg-primary">@item.Role</span>
                        }
                    </td>
                    <td>
                        <a href="@Url.Action("EditUser", "Admin", new { area = "Admin", id = item.id })" class="btn btn-sm btn-warning">Sửa</a>
                        <a href="@Url.Action("DeleteUser", "Admin", new { area = "Admin", id = item.id })" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa người dùng này?');">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

