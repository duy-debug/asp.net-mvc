@model WebApplication1.Models.user
@{
    ViewBag.Title = "Hồ sơ người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2>Hồ sơ người dùng</h2>

    <div class="card mt-4">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0">Thông tin cá nhân</h5>
        </div>
        <div class="card-body">
            <table class="table table-borderless">
                <tr>
                    <th width="200">ID:</th>
                    <td>@Model.id</td>
                </tr>
                <tr>
                    <th>Tên đăng nhập:</th>
                    <td>@Model.username</td>
                </tr>
                <tr>
                    <th>Vai trò:</th>
                    <td>
                        @if (Model.Role == "Admin")
                        {
                            <span class="badge bg-danger">@Model.Role</span>
                        }
                        else
                        {
                            <span class="badge bg-primary">@Model.Role</span>
                        }
                    </td>
                </tr>
            </table>
        </div>
    </div>

    <div class="mt-3">
        <a href="@Url.Action("Index", "User", new { area = "User" })" class="btn btn-secondary">Quay lại</a>
        <a href="@Url.Action("ChangePassword", "User", new { area = "User" })" class="btn btn-warning">Đổi mật khẩu</a>
    </div>
</div>

